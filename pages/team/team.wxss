.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 1180rpx;
  background-image: url('http://airing.ursb.me/image/cover/chunqibg.jpg');
  background-size: 100% 100%;
}

.logo {
  width: 650rpx;
  height: 180rpx;
  margin-top: 250rpx;
}

.name {
  margin-top: 58rpx;
  font-family: Songti SC;
  font-size: 32rpx;
  color: #585858;
}

.button-container {
  margin-bottom: 300rpx;
  display: flex;
  flex-direction: row;
}

.button-search {
  margin-top: 35rpx;
  display: flex;
  flex-direction: column;
  width: 360rpx;
  height: 70rpx;
  border: 2rpx solid #353535;
  border-radius: 10rpx;
  align-items: center;
}

.text-search {
  margin: auto;
  font-family: Songti TC;
  font-size: 32rpx;
  color: #585858;
}

.image-search {
  width: 180rpx;
  height: 180rpx;
}